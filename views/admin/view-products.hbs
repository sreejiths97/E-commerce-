<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-products" class="btn btn-success ml-auto m-5">Add Products</a>
        </div>
        <table class="table mt-5" id="productTable">
  <thead>
    <tr>
      
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
       <th scope="col">Image</th>
       <th scope="col">Options</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
     
      
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
      <td><img  style="width: 50px; height:40px;" src="/product_images/{{this._id}}.jpg"></td>
      <td>
         <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want to delete? {{this.Name}}')">Delete</a>
       
        </td>
    </tr>
    {{/each}}
  </tbody>
</table>
</div>
</section>
<script>
  $(function() {
$('#productTable').DataTable();
  });

  
  
</script>