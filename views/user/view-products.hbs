
    <section>
        <div class="container mt-5">
            <div class="row">
                {{#each products}}
                <div class="col-md-3 p-3">
                    <div class="card" style="width: 15rem; height:25rem">
                        <img class="card-img-top" src="/product_images/{{this._id}}.jpg"
                            alt="Card image cap" style="height: 14rem;">
                        <div class="card-body">
                            <h5 class="card-title">{{this.Name}}</h5>
                            <h6 class="card-title">Rs.{{this.Price}}</h6>
                            <p class="card-text" style="height: 2rem; font-size:12px">{{this.Description}}</p>
                           
                            <button class="btn btn-primary" onclick="addToCart('{{this._id}}')">Add to Cart</button>
                        </div>
                    </div>

                </div>
                {{/each}}
                
            </div>
        </div>
    </section>
